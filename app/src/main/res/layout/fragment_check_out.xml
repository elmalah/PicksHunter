    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.4"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorGray1"
        app:layout_constraintTop_toBottomOf="@+id/tv_attributes"/>

    <TextView
        android:id="@+id/tv_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:text="@string/delivery_address"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/tv_product_title"
        app:layout_constraintEnd_toEndOf="@id/tv_product_title"
        android:layout_marginTop="@dimen/_5sdp" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tv_adddresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/store"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:textColor="@color/colorBlue1"
        app:layout_constraintTop_toBottomOf="@+id/tv_"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/_16sdp"/>
    <LinearLayout
        android:id="@+id/ln_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_adddresses">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text=" + Add Address"
            android:textColor="@color/colorBlue1"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.4"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/colorGray1"
        app:layout_constraintTop_toBottomOf="@+id/ln_add_address"/>
    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@+id/ln_add_address"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_estimate_delivery"
                android:layout_width="0dp"
                android:text="Estimate Delivery Time"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_delivery_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="000"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/colorBlue1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.4"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorGray1"
            app:layout_constraintTop_toBottomOf="@+id/tv_attributes"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="0dp"
                android:text="Product Price"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="000"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/colorBlue1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.4"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorGray1"
            app:layout_constraintTop_toBottomOf="@+id/tv_attributes"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_shipping_name"
                android:layout_width="0dp"
                android:text="Shipping fees"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_shipping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="000"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/colorBlue1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.4"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorGray1"
            app:layout_constraintTop_toBottomOf="@+id/tv_attributes"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="0dp"
                android:text="Total"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="000"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/colorBlue1"/>

        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.4"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/colorGray1"
            app:layout_constraintTop_toBottomOf="@+id/tv_attributes"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:text="Payment Method"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cash on delivery"
                android:textColor="@color/colorBlue1"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_place_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PLACE ORDER"
        android:backgroundTint="@color/colorBlue1"
        android:background="@drawable/shap_btn"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/_26sdp"
        app:layout_constraintStart_toStartOf="@id/ll"
        app:layout_constraintEnd_toEndOf="@+id/ll"
        app:layout_constraintTop_toBottomOf="@id/ll"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>