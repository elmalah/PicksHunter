<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".PicksHunterTypeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/interestscircles"/>

    <TextView
        android:id="@+id/tv_title_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/use_picks_hunter_as"
        android:textColor="@color/colorBlue1"
        android:textSize="@dimen/_28ssp"
        android:layout_marginStart="@dimen/_33sdp"
        android:layout_marginEnd="@dimen/_33sdp"
        android:layout_marginTop="@dimen/_80sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tell_us_who_you_are"
        android:textColor="@color/colorGray1"
        android:textSize="@dimen/_18ssp"
        android:layout_marginStart="@dimen/_33sdp"
        android:layout_marginEnd="@dimen/_33sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="@id/tv_title_1"
        app:layout_constraintEnd_toEndOf="@id/tv_title_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_2"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ll_hunter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_14sdp"
            android:background="@drawable/shape_edit_text"
            app:layout_constraintStart_toStartOf="@id/tv_title_1"
            app:layout_constraintEnd_toEndOf="@id/tv_title_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hunter"
                android:layout_marginTop="@dimen/_70sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hunter"
                android:textSize="@dimen/_22ssp"
                android:textColor="@color/colorBlack2"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_16sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="@dimen/_14sdp"
            android:background="@drawable/shape_edit_text"
            app:layout_constraintStart_toStartOf="@id/tv_title_1"
            app:layout_constraintEnd_toEndOf="@id/tv_title_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/customer"
                android:layout_marginTop="@dimen/_70sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer"
                android:singleLine="true"
                android:textSize="@dimen/_22ssp"
                android:textColor="@color/colorBlack2"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_16sdp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>