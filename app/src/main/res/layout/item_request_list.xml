<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10sdp"
    android:layout_marginTop="3.5dp"
    android:layout_marginBottom="3.5dp"

    android:background="@drawable/card_background">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:src="@drawable/placeholder"
        app:civ_border_color="@color/colorGreen"
        app:civ_border_width="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/guildLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlue1"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/guildLine"
        app:layout_constraintStart_toStartOf="@+id/guildLine"
        tools:text="Ahmed Shafeek" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guildLine"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableEnd="@drawable/ic_right_arrow"
        tools:text="Check Post " />

    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/guildLine"
        app:layout_constraintTop_toBottomOf="@+id/guildLine"
        tools:text="Men T shirt, US POLO" />


    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar" />

<!--<LinearLayout-->
<!--    android:layout_width="0dp"-->
<!--    android:layout_height="match_parent"-->
<!--    app:layout_constraintStart_toEndOf="@+id/iv_product_img"-->
<!--    app:layout_constraintEnd_toEndOf="parent"-->
<!--    app:layout_constraintBottom_toBottomOf="@+id/iv_product_img"-->
<!--    app:layout_constraintTop_toTopOf="@+id/iv_product_img"-->
<!--    android:orientation="vertical"></LinearLayout>-->
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toEndOf="@+id/iv_product_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_product_img"
        app:layout_constraintTop_toTopOf="@+id/iv_product_img"
    android:layout_marginStart="@dimen/_5sdp">
<TextView
    android:id="@+id/product_title"
    android:layout_width="0dp"
    app:layout_constraintHorizontal_weight="0.5"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:text="product_title"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    />
    <TextView
        android:id="@+id/request_id"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/product_title"
        app:layout_constraintTop_toBottomOf="@+id/product_title"
        android:text="Request ID"
        android:layout_marginTop="@dimen/_5sdp"
        />
    <TextView
        android:id="@+id/request_id_value"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/request_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/request_id"
        android:text="product_title"
        android:gravity="end"
        android:textColor="@color/colorBlue1"
        android:layout_marginStart="@dimen/_5sdp"
        />

    <TextView
        android:id="@+id/product_id"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/request_id"
        app:layout_constraintTop_toBottomOf="@+id/request_id"
        android:text="product ID"
        android:layout_marginTop="@dimen/_5sdp"
        />
    <TextView
        android:id="@+id/product_id_value"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/product_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_id"
        android:text="product_title"
        android:gravity="end"
        android:textColor="@color/colorBlue1"
        android:layout_marginStart="@dimen/_5sdp"
        />

    <!-- Size -->
    <TextView
        android:id="@+id/size_id"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/product_id"
        app:layout_constraintTop_toBottomOf="@+id/product_id"
        android:text="Size"
        android:layout_marginTop="@dimen/_5sdp"
        />
    <TextView
        android:id="@+id/size_id_value"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/size_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/size_id"
        android:text="product_title"
        android:gravity="end"
        android:textColor="@color/colorBlue1"
        android:layout_marginStart="@dimen/_5sdp"
        />

    <!-- Total Price -->
    <TextView
        android:id="@+id/total_price_id"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/size_id"
        app:layout_constraintTop_toBottomOf="@+id/size_id"
        android:text="Total Price"
        android:layout_marginTop="@dimen/_5sdp"
        />
    <TextView
        android:id="@+id/total_price_value"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/total_price_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/total_price_id"
        android:text="product_title"
        android:gravity="end"
        android:textColor="@color/colorBlue1"
        android:layout_marginStart="@dimen/_5sdp"
        />

    <!-- Comession -->
    <TextView
        android:id="@+id/comission_id"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/total_price_id"
        app:layout_constraintTop_toBottomOf="@+id/total_price_id"
        android:text="Comission"
        android:layout_marginTop="@dimen/_5sdp"
        />
    <TextView
        android:id="@+id/comission_value"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/comission_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/comission_id"
        android:text="product_title"
        android:gravity="end"
        android:textColor="@color/colorBlue1"
        android:layout_marginStart="@dimen/_5sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/iv_product_img"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"

        app:layout_constraintTop_toBottomOf="@+id/iv_product_img"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_reject"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/light_round_shap_btn"
            android:backgroundTint="@color/colorBlue1"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/image_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_shopping_cart"
                android:tint="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_reject"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/request_approve"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_reject"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_approve"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/light_round_shap_btn"
            android:backgroundTint="@color/colorBlue1"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/image_approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_shopping_cart"
                android:tint="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_approve"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/request_reject"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_approve"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>